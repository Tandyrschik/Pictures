@model Pictures.Domain.ViewModels.Account.LoginViewModel 

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@{
    <div>
        <form asp-controller="Account" asp-action="Login" class="main-form">

            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="input-element">
                <p>Login:</p>

                <input placeholder="" maxlength="50" asp-for="Login">
                <span asp-validation-for="Login"></span>
            </div>
            <div class="input-element">
                <p>Password:</p>

                <input placeholder="" maxlength="50" type="password" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <button type="submit">Confirm</button>
            </div>
        </form>
    </div>
}
