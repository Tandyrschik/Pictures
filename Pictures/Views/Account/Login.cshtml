@model Pictures.Domain.ViewModels.Account.LoginViewModel 

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
@{
    <div>
        <form class="main-form" asp-controller="Account" asp-action="Login">

            <div class="validation" asp-validation-summary="ModelOnly"></div>

            <div class="input-element">
                <p>Login:</p>

                <input placeholder="" maxlength="50" asp-for="Login">
                <span class="warning-message" asp-validation-for="Login"></span>
            </div>

            <div class="input-element">
                <p>Password:</p>

                <input placeholder="" maxlength="50" type="password" asp-for="Password">
                <span class="warning-message" asp-validation-for="Password"></span>
            </div>

            <div>
                <button class="button-sumbit" type="submit">Confirm</button>
            </div>
        </form>
    </div>
}
